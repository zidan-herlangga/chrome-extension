{
  "manifest_version": 3,
  "name": "AIVA â€” Smart Screen Assistant",
  "version": "1.0.5",
  "description": "Contextual AI assistant that helps analyze content on screen, even in fullscreen mode, through a lightweight and responsive interactive bubble.",
  "permissions": ["activeTab", "scripting", "storage", "contextMenus"],
  "host_permissions": ["https://openrouter.ai/api/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Buka AIVA",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ]
}
